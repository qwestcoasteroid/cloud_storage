{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-ggdb",
                "-I${workspaceFolder}/network/header",
                "-I${workspaceFolder}/service/header",
                "-I${workspaceFolder}/stored_data/header",
                "${workspaceFolder}/network/source/client.cpp",
                "${workspaceFolder}/network/source/server.cpp",
                "${workspaceFolder}/network/source/library.cpp",
                "${workspaceFolder}/network/source/network_object.cpp",
                "${workspaceFolder}/network/source/basic_network_stream.cpp",
                "${workspaceFolder}/network/source/network_reading_stream.cpp",
                "${workspaceFolder}/network/source/network_writing_stream.cpp",
                "${workspaceFolder}/network/source/protocol.cpp",
                "${workspaceFolder}/stored_data/source/profile.cpp",
                "${workspaceFolder}/service/source/help_tools.cpp",
                "${workspaceFolder}/server_main.cpp",
                "-o",
                "server.exe",
                "-lws2_32",
                "-std=c++17",
                "-DWINVER=0x0600",
                "-D_WIN32_WINNT=0x0600",
                "-DIPV6_V6ONLY=27"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-client",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-ggdb",
                "-I${workspaceFolder}/network/header",
                "-I${workspaceFolder}/service/header",
                "-I${workspaceFolder}/stored_data/header",
                "${workspaceFolder}/network/source/client.cpp",
                "${workspaceFolder}/network/source/library.cpp",
                "${workspaceFolder}/network/source/network_object.cpp",
                "${workspaceFolder}/network/source/basic_network_stream.cpp",
                "${workspaceFolder}/network/source/network_reading_stream.cpp",
                "${workspaceFolder}/network/source/network_writing_stream.cpp",
                "${workspaceFolder}/network/source/protocol.cpp",
                "${workspaceFolder}/stored_data/source/profile.cpp",
                "${workspaceFolder}/service/source/help_tools.cpp",
                "${workspaceFolder}/client_main.cpp",
                "-o",
                "client.exe",
                "-lws2_32",
                "-std=c++17",
                "-DWINVER=0x0600",
                "-D_WIN32_WINNT=0x0600",
                "-DIPV6_V6ONLY=27"
            ],
            "problemMatcher": "$gcc"
        }
    ]
}