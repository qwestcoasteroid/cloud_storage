{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-ggdb",
                "-I${workspaceFolder}/network/include",
                "-I${workspaceFolder}/service/include",
                "-I${workspaceFolder}/messages/include",
                "-I${workspaceFolder}/filesystem/include",
                "${workspaceFolder}/network/source/connection.cpp",
                "${workspaceFolder}/network/source/listener.cpp",
                "${workspaceFolder}/network/source/library.cpp",
                "${workspaceFolder}/network/source/network_object.cpp",
                "${workspaceFolder}/network/source/network_stream.cpp",
                "${workspaceFolder}/network/source/protocol.cpp",
                "${workspaceFolder}/messages/source/profile_info.cpp",
                "${workspaceFolder}/messages/source/file_info.cpp",
                "${workspaceFolder}/messages/source/file_upload.cpp",
                "${workspaceFolder}/messages/source/file_download.cpp",
                "${workspaceFolder}/messages/source/file_part.cpp",
                "${workspaceFolder}/service/source/help_tools.cpp",
                "${workspaceFolder}/server_main.cpp",
                "-o",
                "server.exe",
                "-lws2_32",
                "-std=c++17",
                "-static-libgcc",
                "-static-libstdc++",
                "-march=native",
                "-DWINVER=0x0501",
                "-D_WIN32_WINNT=0x0501",
                "-DIPV6_V6ONLY=27",
                //"-DDEBUG_OUTPUT"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-client",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-ggdb",
                "-I${workspaceFolder}/network/include",
                "-I${workspaceFolder}/service/include",
                "-I${workspaceFolder}/messages/include",
                "-I${workspaceFolder}/filesystem/include",
                "${workspaceFolder}/network/source/connection.cpp",
                "${workspaceFolder}/network/source/library.cpp",
                "${workspaceFolder}/network/source/network_object.cpp",
                "${workspaceFolder}/network/source/network_stream.cpp",
                "${workspaceFolder}/network/source/protocol.cpp",
                "${workspaceFolder}/messages/source/profile_info.cpp",
                "${workspaceFolder}/messages/source/file_upload.cpp",
                "${workspaceFolder}/messages/source/file_download.cpp",
                "${workspaceFolder}/messages/source/file_part.cpp",
                "${workspaceFolder}/messages/source/file_info.cpp",
                "${workspaceFolder}/service/source/help_tools.cpp",
                "${workspaceFolder}/client_main.cpp",
                "-o",
                "client.exe",
                "-lws2_32",
                "-std=c++17",
                "-static-libgcc",
                "-static-libstdc++",
                "-march=native",
                "-DWINVER=0x0501",
                "-D_WIN32_WINNT=0x0501",
                "-DIPV6_V6ONLY=27",
                //"-DDEBUG_OUTPUT"
            ],
            "problemMatcher": "$gcc"
        }
    ]
}